# AI Provider API Keys
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
OPENAI_API_KEY="your_openai_api_key_here"             # Required for OpenAI models. Format: sk-proj-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Required for research features. Format: pplx-...

# Optional AI Providers
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models
XAI_API_KEY="your_xai_key_here"                       # Optional, for xAI models
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dora_db"
REDIS_URL="redis://localhost:6379/0"

# Application Configuration
ENVIRONMENT="development"                              # development, staging, production
LOG_LEVEL="INFO"                                      # DEBUG, INFO, WARNING, ERROR
API_HOST="0.0.0.0"
API_PORT="8000"

# Security
JWT_SECRET_KEY="your_jwt_secret_key_here"             # Generate with: openssl rand -hex 32
API_KEY_HEADER="X-API-Key"                            # Header name for API authentication

# External Services
WEATHER_API_KEY="your_weather_api_key_here"           # For weather data collection
IMAGE_GENERATION_PROVIDER="openai"                    # openai, anthropic, etc.

# Monitoring and Observability
METRICS_ENABLED="true"
TRACING_ENABLED="true"
SENTRY_DSN=""                                         # Optional: Error tracking

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
RATE_LIMIT_BURST="10"